 <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow pdf_link">
  <h5 class="my-0 mr-md-auto font-weight-normal navbar-brand"><%= link_to('Eloqunce', root_path, class: 'navi') %> </h5>
  <%= link_to 'Home', root_path ,class: "nav-link" %>
  <nav class="my-2 my-md-0 mr-md-3"> 
  </nav>
  <% if user_signed_in? %>
 <%= link_to 'Logout' , destroy_user_session_path, method: :delete , class: "btn btn-outline-primary mr-4" %>
  
    <% if current_user.profilepic?%>
      <%= link_to( image_tag(current_user.profilepic.to_s, class: 'avatar'), edit_user_registration_path)%>
