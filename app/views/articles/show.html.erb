<div class="container">
  <div class="row justify-content-center">
    <div class="card shadow rounded p-3 col-md-9">
      <p id="notice"><%= notice %></p>
      <h1 class="text-center"><%= @article.title %></h1>
      <%=image_tag @article.image.url, class: "card-img-top" %>
      <div class="card-body">
        <%= @article.description.html_safe %>
      <p class="pdf_link"><%= link_to "Download Article (PDF)", article_path(@article, :format => "pdf") , class: 'btn btn-outline-primary' %></p>
      </div>
    </div>
  </div>
</div>