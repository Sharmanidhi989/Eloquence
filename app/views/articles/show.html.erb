<div class="container">
  <div class="row justify-content-center">
    <div class="card shadow rounded p-3">
      <p id="notice"><%= notice %></p>
      <h1 class="text-center"><%= @article.title %></h1>
      <%=image_tag @article.image.url, class: "card-img-top" %>
      <div class="card-body">
        <%= @article.description.html_safe %>
        <p class="pdf_link"><%= link_to "Download Article (PDF)", article_path(@article, :format => "pdf") , class: 'btn btn-outline-primary' %> <%= link_to 'Back', root_path , class: 'btn btn-primary float-right' %></p>
      </div>
    </div>
  </div>
  <div class="pdf_link mt-3">
    <div class="col-md-6">
      <h2>Comments <span class="badge"><%= @article.comments.count %> </span></h2>
      <%= render @article.comments.includes(:user) %>
      <% if user_signed_in? %>
        <%= render 'comments/form' %>
      <% else %>
        <p>You must login to comment..</p>
      <% end %>
    </div>
  </div>
</div>


