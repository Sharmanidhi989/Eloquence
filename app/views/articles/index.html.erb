<div class="container">
 <%= search_form_for @search do |f| %>
  <div class="input-group mb-2">
    <div class="input-group-prepend">
        <div class="input-group-text">Search</div>
    </div>
    <%= f.text_field :title_cont, class: "form-control" %>
  </div>
<% end %>
  <p id="notice"><%= notice %></p>

<h1>Articles</h1>

<div class="card-columns">
    <% @articles.each do |article| %>
    <div class="card" style="overflow: hidden;height: 500px">
      <% if article.image.present? %>
        <%=image_tag article.image.url , class: "card-img-top" , style: 'height:15rem'%>
        <% else %>
        <%=image_tag 'default_background.jpg' , class: "card-img-top" , style: 'height:15rem'%>
      <% end %>
      <div class="p-2" style="overflow: hidden;height: 175px;">
        <h5 class="card-title" ><%= article.title %></h5>
      </div>
        <p><%= article.created_at.strftime("%Y-%m-%d") %></p>
      <div class="card-footer">
       <%= link_to "Read more.." , article_path(article) , class: "float-right" %>
      </div>      
    </div>
    <% end %> 
    </div>   
  </div>
</div>