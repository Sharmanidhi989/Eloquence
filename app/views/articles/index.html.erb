<div class="container">
  <p id="notice"><%= notice %></p>
<%= link_to 'New Article', new_article_path , class: "btn btn-outline-primary float-right" %>
<h1>Articles</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>image</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description.html_safe %></td>
        <td><%=image_tag article.image.url ,:style =>'width:200px; height:200px' %></td>
        <td><%= link_to 'Show', article, class:'btn btn-outline-primary' %>
        <%= link_to 'Edit', edit_article_path(article),class:'btn btn-outline-primary' %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>