<div class="container">
  <div class="row justify-content-center">
    <div class="card col-md-4 shadow rounded p-3">



      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
      <div class="profile-edit-row">
        <% if current_user.profilepic?%>
          <%= image_tag(@current_user.profilepic.to_s, class: "editavatar", id: "preview")%>
        <% else %>
          <%= image_tag('defaultuser.png', class: 'editavatar')%>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :Avatar %> <br />
        <%= f.file_field :profilepic, class: 'form-control',onchange: "readURL(this);"%>
         
      </div>
      <hr>
      <h2>Edit <%= resource_name.to_s.humanize %></h2>


      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" ,class:'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :contact %><br />
        <%= f.text_field :contact, autofocus: true, autocomplete: "contact" ,class:'form-control'%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" ,class:'form-control'%>
      </div>

      <%= f.submit "Update"  ,class:'btn btn-primary'%>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:'btn btn-primary' %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>