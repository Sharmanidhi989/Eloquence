<div class="container">
  <div class="row">
  <div class="card-group">
    <% @articles.each do |article| %>
    <div class="card" style="overflow: hidden;max-height: 500px">
      
      <% if article.image.present? %>
        <%=image_tag article.image.url , class: "card-img-top" , style: 'height:15rem'%>
        <% else %>
        <%=image_tag 'default_background.jpg' , class: "card-img-top" , style: 'height:15rem'%>
      <% end %>
      <div class="p-2" style="overflow: hidden;height: 200px">
        
        <h5 class="card-title" ><%= article.title %></h5>
      </div>
        <p><%= article.created_at.strftime("%Y-%m-%d") %></p>
      <div class="card-footer float-left">
       <%= link_to "Read more.." , article_path(article) , class: "float-right" %>
      </div>      
    </div>
    <% end %> 
    </div>   
  </div>
</div>